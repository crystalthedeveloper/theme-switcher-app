{
  "id": "theme-switcher-extension",
  "version": "1.0.0",
  "name": "Theme Switcher for Webflow",
  "short_name": "ThemeSwitcher",
  "title": "Theme Switcher",
  "description": "Let users toggle dark and light mode on your Webflow site. Install via the Designer or copy the script manually.",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "lang": "en-US",
  "icons": [
    { "src": "/icon-128.png", "sizes": "128x128", "type": "image/png" },
    { "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" },
    { "src": "/icon-512.png", "sizes": "512x512", "type": "image/png" }
  ],
  "scripts": [
    {
      "src": "https://theme-toggle-webflow.vercel.app/extension.js",
      "location": "designer"
    }
  ],
  "match": {
    "url": "*"
  }
}